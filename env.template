# Environment Configuration for Agent Framework
# Copy this to .env and fill in your actual values

# Application Settings
ENTITIES_DIR=./agents
MODE=user
HOST=0.0.0.0
PORT=8080
CORS_ORIGINS=*

# Authentication (set to false for development, true for production)
AUTH_ENABLED=true
SECRET_KEY=your-secret-key-here-change-this-in-production

# AI Model API Keys
OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
ANTHROPIC_API_KEY=your-anthropic-key-here

# Azure Configuration (for deployment)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Database Configuration (if using database)
DATABASE_URL=sqlite:///./agents.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Agent Framework Specific
SHIPMENT_API_KEY=your-shipment-api-key-here
WEBHOOK_SECRET=your-webhook-secret-here

# Development Settings
DEBUG=false
RELOAD=false

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
TRUSTED_HOSTS=localhost,127.0.0.1,your-domain.com
